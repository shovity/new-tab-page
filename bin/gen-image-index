#!/usr/bin/env node

const fs = require('fs')
const config = require('../config')

// get image index
fs.readdir(config.indexImage.entry, (err, images) => {
  if (err) throw err
  // write image index file
  fs.writeFile(
    config.indexImage.output,
    `// THIS IS AN AUTOGENERATED FILE.\n// DO NOT EDIT THIS FILE DIRECTLY\nwindow.imageIndex = ${JSON.stringify(images)}`,
    (err) => {
      if (err) throw err
      console.log('images indexing conpleted')
    }
  )
})
